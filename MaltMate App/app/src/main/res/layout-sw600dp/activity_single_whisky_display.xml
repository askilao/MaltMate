<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aao.maltmate.SingleWhiskyDisplayActivity"
    android:orientation="vertical"
    android:paddingRight="10dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/whiskeyimage"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:background="#FFFFFF"
        android:padding="8dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_below="@id/whiskeyimage">
        <TextView
            android:id="@+id/whiskey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="whiskeyname"
            android:textSize="40sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/whiskey_type_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type: "
                android:textSize="32sp"
                android:paddingRight="0dp"
                android:layout_weight="0" />
            <TextView
                android:id="@+id/whiskey_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="type"
                android:textSize="24sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/whiskey_class_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class: "
                android:textSize="32sp"
                android:paddingRight="0dp"
                android:layout_weight="0"/>
            <TextView
                android:id="@+id/whiskey_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class"
                android:textSize="24sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/origin_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Origin: "
                android:textSize="32sp"
                android:paddingRight="0dp"/>

            <TextView
                android:id="@+id/origin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="origin"
                android:textSize="24sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/distillery_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distillery: "
                android:textSize="32sp"
                android:paddingRight="0dp"/>
            <TextView
                android:id="@+id/distillery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="distillery"
                android:textSize="24sp" />

        </LinearLayout>




        <TextView
            android:id="@+id/taste"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Taste"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Info about whiskey"
            android:textSize="20sp"
            android:textStyle="italic"/>

    </LinearLayout>
</LinearLayout>


</ScrollView>
